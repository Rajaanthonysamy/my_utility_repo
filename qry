def extract_example_chunks(example_list):
    chunks = []
    metadatas = []

    for idx, ex in enumerate(example_list):
        uq = ex.get("user_question", "")
        qd = ex.get("query_description", "")
        sq = ex.get("query", "")

        # One chunk per example
        text = f"""
Example {idx+1}
User Question: {uq}
Query Description: {qd}
SPARQL Query: {sq}
""".strip()

        chunks.append(text)

        metadatas.append({
            "doc_type": "example_query",
            "example_id": idx + 1
        })

    return chunks, metadatas
