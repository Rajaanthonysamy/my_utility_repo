def merge_sparql_with_bucket(doc_content, sparql_queries):
    """
    doc_content: string retrieved from the bucket document
    sparql_queries: list of SPARQL queries corresponding to examples
    Returns a string where each example includes its SPARQL query
    """
    lines = doc_content.split("\n")
    merged_lines = []
    query_idx = 0

    for line in lines:
        merged_lines.append(line)
        # Detect the end of example's query description
        if line.strip().startswith("query description"):
            if query_idx < len(sparql_queries):
                merged_lines.append(f"SPARQL Query: {sparql_queries[query_idx]}")
                query_idx += 1

    return "\n".join(merged_lines)
